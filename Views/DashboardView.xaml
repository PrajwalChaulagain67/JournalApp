<UserControl x:Class="JournalApp.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JournalApp.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Modern Header -->
        <Border Grid.Row="0" 
               Background="{DynamicResource SurfaceBrush}" 
               Padding="30,25"
               Margin="0,0,0,25"
               BorderBrush="{DynamicResource BorderBrush}"
               BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“Š" 
                              FontSize="32" 
                              Margin="0,0,12,0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="Dashboard" 
                              FontSize="32" 
                              FontWeight="Bold" 
                              Foreground="{DynamicResource PrimaryTextBrush}"
                              VerticalAlignment="Center"/>
                </StackPanel>
                <Button x:Name="RefreshButton"
                       Command="{Binding RefreshCommand}" 
                       HorizontalAlignment="Right" 
                       Padding="18,10"
                       Background="#4A90E2"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Click="RefreshButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”„" Margin="0,0,6,0" FontSize="14"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="8" 
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#357ABD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Stats Grid (scrollable) -->
        <ScrollViewer x:Name="DashboardScrollViewer"
                      Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="True"
                      Padding="0,0,20,0">
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <!-- Top Stats - Redesigned -->
            <Border Grid.Row="0" Grid.Column="0" 
                   Background="#FFF5F5F5"
                   BorderBrush="#FFE0E0E0" 
                   BorderThickness="1" 
                   CornerRadius="16" 
                   Padding="30" 
                   Margin="0,0,12,20">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="4" BlurRadius="8" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ðŸ”¥" FontSize="24" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Current Streak" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FF666666"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding Streak}" 
                              FontSize="56" 
                              FontWeight="Bold"
                              Foreground="#FF4CAF50"
                              HorizontalAlignment="Left"
                              Margin="0,5,0,5"/>
                    <TextBlock Text="days in a row" 
                              FontSize="13" 
                              Foreground="#FF999999"
                              HorizontalAlignment="Left"
                              Margin="0,0,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" 
                   Background="#FFF0F7FF"
                   BorderBrush="#FFD0E8FF" 
                   BorderThickness="1" 
                   CornerRadius="16" 
                   Padding="30" 
                   Margin="12,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="4" BlurRadius="8" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ðŸ“" FontSize="24" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Total Entries" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FF666666"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding TotalEntries}" 
                              FontSize="56" 
                              FontWeight="Bold"
                              Foreground="#FF2196F3"
                              HorizontalAlignment="Left"
                              Margin="0,5,0,5"/>
                    <TextBlock Text="journal entries" 
                              FontSize="13" 
                              Foreground="#FF999999"
                              HorizontalAlignment="Left"
                              Margin="0,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Mood Distribution - Redesigned -->
            <Border Grid.Row="1" Grid.Column="0" 
                   Background="{DynamicResource CardBackgroundBrush}"
                   BorderBrush="{DynamicResource BorderBrush}" 
                   BorderThickness="1" 
                   CornerRadius="16" 
                   Padding="25" 
                   Margin="0,0,12,0">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="4" BlurRadius="8" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="ðŸ˜Š" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Mood Distribution" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="{DynamicResource PrimaryTextBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding MoodDistribution}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="45"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                              Text="{Binding Key}" 
                                              VerticalAlignment="Center"
                                              FontSize="15"
                                              FontWeight="Medium"
                                              Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <Border Grid.Column="1" 
                                           Background="#FFE8F4FD" 
                                           CornerRadius="12" 
                                           Height="28" 
                                           Margin="10,0,10,0"
                                           HorizontalAlignment="Stretch">
                                        <Border Background="#FF4A90E2" 
                                               CornerRadius="12" 
                                               HorizontalAlignment="Left"
                                               Height="28">
                                            <Border.Width>
                                                <MultiBinding>
                                                    <MultiBinding.Converter>
                                                        <local:PercentageConverter/>
                                                    </MultiBinding.Converter>
                                                    <Binding Path="Value"/>
                                                    <Binding Path="DataContext.MoodDistributionMax" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                </MultiBinding>
                                            </Border.Width>
                                        </Border>
                                    </Border>
                                    <TextBlock Grid.Column="2" 
                                              Text="{Binding Value}" 
                                              VerticalAlignment="Center"
                                              FontWeight="Bold"
                                              Foreground="#FF2196F3"
                                              FontSize="15"
                                              HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Top Tags and Dates - Redesigned -->
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="12,0,0,0">
                <Border Background="{DynamicResource CardBackgroundBrush}"
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="16" 
                       Padding="25" 
                       Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="4" BlurRadius="8" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,18">
                            <TextBlock Text="ðŸ·ï¸" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Most Used Tags" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <WrapPanel Orientation="Horizontal">
                            <ItemsControl ItemsSource="{Binding TopTags}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}"
                                                Command="{Binding DataContext.SelectTagCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Padding="14,8"
                                                Margin="0,0,10,10"
                                                Background="#FFFFE082"
                                                Foreground="#FF8B6914"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                FontSize="13"
                                                FontWeight="SemiBold">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="20"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FFFFD54F"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </WrapPanel>

                        <!-- Selected tag entries - Redesigned -->
                        <Border Margin="0,18,0,0"
                                Background="#FFF5F5F5"
                                BorderBrush="#FFE0E0E0"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="18">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedTag, StringFormat='ðŸ“Œ Entries for tag: {0}'}"
                                           FontSize="15"
                                           FontWeight="Bold"
                                           Foreground="#FF333333"
                                           Visibility="{Binding HasSelectedTag, Converter={StaticResource BoolToVis}}"
                                           Margin="0,0,0,12"/>

                                <TextBlock Text="ðŸ’¡ Click a tag above to see the journal entries that use it."
                                           FontSize="13"
                                           Foreground="#FF888888"
                                           Visibility="{Binding ShowTagHint, Converter={StaticResource BoolToVis}}"
                                           FontStyle="Italic"/>

                                <TextBlock Text="âŒ No entries found for this tag."
                                           FontSize="13"
                                           Foreground="#FF888888"
                                           Visibility="{Binding ShowNoEntriesForSelectedTag, Converter={StaticResource BoolToVis}}"
                                           Margin="0,0,0,8"
                                           FontStyle="Italic"/>

                                <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding SelectedTagEntries}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White"
                                                        BorderBrush="#FFE0E0E0"
                                                        BorderThickness="1"
                                                        CornerRadius="10"
                                                        Padding="15"
                                                        Margin="0,0,0,10">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Date, StringFormat='{}{0:yyyy-MM-dd}'}"
                                                                   FontWeight="Bold"
                                                                   Foreground="#FF2196F3"
                                                                   FontSize="14"
                                                                   Margin="0,0,0,8"/>
                                                        <TextBlock Text="{Binding Content}"
                                                                   TextWrapping="Wrap"
                                                                   Foreground="#FF444444"
                                                                   FontSize="13"
                                                                   LineHeight="20"
                                                                   MaxHeight="100"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Background="{DynamicResource CardBackgroundBrush}"
                       BorderBrush="{DynamicResource BorderBrush}" 
                       BorderThickness="1" 
                       CornerRadius="16" 
                       Padding="25">
                    <Border.Effect>
                        <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="4" BlurRadius="8" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,18">
                            <TextBlock Text="ðŸ“…" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Journal Timeline" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Margin="0,5">
                            <Border Background="#FFF0F7FF" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“Œ" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                    <StackPanel>
                                        <TextBlock Text="First Entry" FontSize="12" Foreground="#FF888888" Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding FirstEntryDate, StringFormat='{}{0:yyyy-MM-dd}'}" 
                                                   FontSize="16" FontWeight="Bold" Foreground="#FF2196F3"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Border Background="#FFF0F7FF" CornerRadius="8" Padding="15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“Œ" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                    <StackPanel>
                                        <TextBlock Text="Last Entry" FontSize="12" Foreground="#FF888888" Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding LastEntryDate, StringFormat='{}{0:yyyy-MM-dd}'}" 
                                                   FontSize="16" FontWeight="Bold" Foreground="#FF2196F3"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
