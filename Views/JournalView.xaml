<UserControl x:Class="JournalApp.Views.JournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JournalApp.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <local:MoodEqualsConverter x:Key="MoodEqualsConverter"/>
        <local:CollectionContainsConverter x:Key="CollectionContainsConverter"/>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="5" 
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="{DynamicResource BackgroundBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Date and Action Buttons -->
        <Border Grid.Row="0" 
               Background="{DynamicResource SurfaceBrush}" 
               CornerRadius="10" 
               Padding="25" 
               Margin="0,0,0,20"
               BorderBrush="{DynamicResource BorderBrush}"
               BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Action Buttons on LEFT -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <Button Content="ðŸ’¾ Save" 
                           Command="{Binding SaveCommand}" 
                           Background="#10B981" 
                           Foreground="White" 
                           Padding="20,12"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"
                           MinWidth="120">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8" 
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#059669"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="ðŸ—‘ï¸ Delete" 
                           Command="{Binding DeleteCommand}" 
                           Background="#EF4444" 
                           Foreground="White" 
                           Padding="20,12"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"
                           MinWidth="120">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8" 
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#DC2626"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="ðŸ“„ Export PDF" 
                           Command="{Binding ExportPdfCommand}" 
                           Background="#3B82F6" 
                           Foreground="White" 
                           Padding="20,12"
                           FontSize="15"
                           FontWeight="SemiBold"
                           MinWidth="140">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8" 
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2563EB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                
                <!-- Date Picker on RIGHT -->
                <DatePicker Grid.Column="2" 
                           SelectedDate="{Binding SelectedDate}" 
                           FontSize="16" 
                           Width="240" 
                           HorizontalAlignment="Right"
                           Padding="12"
                           BorderBrush="{DynamicResource InputBorderBrush}"
                           BorderThickness="1"
                           Background="{DynamicResource InputBackgroundBrush}"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Entry Content -->
            <Border Grid.Column="0" 
                   Background="{DynamicResource CardBackgroundBrush}" 
                   CornerRadius="12" 
                   Padding="25" 
                   Margin="0,0,15,0"
                   BorderBrush="{DynamicResource BorderBrush}"
                   BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                              Text="Your Journal Entry" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="{DynamicResource PrimaryTextBrush}"
                              Margin="0,0,0,15"/>

                    <TextBox Grid.Row="1" 
                            Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}" 
                            TextWrapping="Wrap" 
                            AcceptsReturn="True" 
                            VerticalScrollBarVisibility="Auto"
                            FontSize="14"
                            Padding="15"
                            BorderBrush="{DynamicResource InputBorderBrush}"
                            BorderThickness="1"
                            Background="{DynamicResource InputBackgroundBrush}"/>
                </Grid>
            </Border>

            <!-- Right: Moods, Tags, Search -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Mood Selection - Expandable -->
                    <Border Background="{DynamicResource CardBackgroundBrush}" 
                           CornerRadius="16" 
                           Padding="0" 
                           Margin="0,0,0,15"
                           BorderBrush="{DynamicResource BorderBrush}"
                           BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="6" Opacity="0.08"/>
                        </Border.Effect>
                        <Expander IsExpanded="False" 
                                 Background="Transparent"
                                 BorderThickness="0">
                            <Expander.Header>
                                <Border Background="Transparent" Padding="20,15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ˜Š" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Mood Selection" 
                                                  FontSize="18" 
                                                  FontWeight="Bold" 
                                                  Foreground="{DynamicResource PrimaryTextBrush}"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Expander.Header>
                            <Expander.Content>
                                <Border Background="Transparent" Padding="20,10,20,20">
                                    <StackPanel>
                                        <!-- Primary Mood Section -->
                                        <Border Background="#FFF0F7FF" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                                            <StackPanel>
                                                <TextBlock Text="Primary Mood (Required)" 
                                                          FontWeight="Bold" 
                                                          FontSize="14" 
                                                          Foreground="#FF2196F3"
                                                          Margin="0,0,0,12"/>

                                                <TextBlock Text="Positive" FontWeight="SemiBold" FontSize="13" Foreground="#FF666666" Margin="0,0,0,6"/>
                                                <ItemsControl ItemsSource="{Binding Source={x:Static local:JournalView.PositiveMoods}}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="White" 
                                                                   BorderBrush="#FFE0E0E0" 
                                                                   BorderThickness="1" 
                                                                   CornerRadius="8" 
                                                                   Padding="12,8" 
                                                                   Margin="0,0,8,6"
                                                                   Cursor="Hand">
                                                                <RadioButton Content="{Binding}"
                                                                             GroupName="PrimaryMood"
                                                                             Command="{Binding DataContext.SetPrimaryMoodCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                             CommandParameter="{Binding}"
                                                                             Background="Transparent"
                                                                             BorderThickness="0"
                                                                             Padding="0"
                                                                             Margin="0">
                                                                    <RadioButton.IsChecked>
                                                                        <MultiBinding Mode="OneWay" Converter="{StaticResource MoodEqualsConverter}">
                                                                            <Binding Path="DataContext.SelectedPrimaryMood" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                                            <Binding/>
                                                                        </MultiBinding>
                                                                    </RadioButton.IsChecked>
                                                                    <RadioButton.Style>
                                                                        <Style TargetType="RadioButton">
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="RadioButton">
                                                                                        <StackPanel Orientation="Horizontal">
                                                                                            <Ellipse x:Name="Ellipse" 
                                                                                                    Width="16" 
                                                                                                    Height="16" 
                                                                                                    Stroke="#FF2196F3" 
                                                                                                    StrokeThickness="2" 
                                                                                                    Fill="Transparent" 
                                                                                                    Margin="0,0,8,0"/>
                                                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                                                        </StackPanel>
                                                                                        <ControlTemplate.Triggers>
                                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                                <Setter TargetName="Ellipse" Property="Fill" Value="#FF2196F3"/>
                                                                                            </Trigger>
                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </RadioButton.Style>
                                                                </RadioButton>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <TextBlock Text="Neutral" FontWeight="SemiBold" FontSize="13" Foreground="#FF666666" Margin="0,10,0,6"/>
                                                <ItemsControl ItemsSource="{Binding Source={x:Static local:JournalView.NeutralMoods}}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="White" 
                                                                   BorderBrush="#FFE0E0E0" 
                                                                   BorderThickness="1" 
                                                                   CornerRadius="8" 
                                                                   Padding="12,8" 
                                                                   Margin="0,0,8,6"
                                                                   Cursor="Hand">
                                                                <RadioButton Content="{Binding}"
                                                                             GroupName="PrimaryMood"
                                                                             Command="{Binding DataContext.SetPrimaryMoodCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                             CommandParameter="{Binding}"
                                                                             Background="Transparent"
                                                                             BorderThickness="0"
                                                                             Padding="0"
                                                                             Margin="0">
                                                                    <RadioButton.IsChecked>
                                                                        <MultiBinding Mode="OneWay" Converter="{StaticResource MoodEqualsConverter}">
                                                                            <Binding Path="DataContext.SelectedPrimaryMood" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                                            <Binding/>
                                                                        </MultiBinding>
                                                                    </RadioButton.IsChecked>
                                                                    <RadioButton.Style>
                                                                        <Style TargetType="RadioButton">
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="RadioButton">
                                                                                        <StackPanel Orientation="Horizontal">
                                                                                            <Ellipse x:Name="Ellipse" 
                                                                                                    Width="16" 
                                                                                                    Height="16" 
                                                                                                    Stroke="#FF2196F3" 
                                                                                                    StrokeThickness="2" 
                                                                                                    Fill="Transparent" 
                                                                                                    Margin="0,0,8,0"/>
                                                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                                                        </StackPanel>
                                                                                        <ControlTemplate.Triggers>
                                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                                <Setter TargetName="Ellipse" Property="Fill" Value="#FF2196F3"/>
                                                                                            </Trigger>
                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </RadioButton.Style>
                                                                </RadioButton>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <TextBlock Text="Negative" FontWeight="SemiBold" FontSize="13" Foreground="#FF666666" Margin="0,10,0,6"/>
                                                <ItemsControl ItemsSource="{Binding Source={x:Static local:JournalView.NegativeMoods}}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="White" 
                                                                   BorderBrush="#FFE0E0E0" 
                                                                   BorderThickness="1" 
                                                                   CornerRadius="8" 
                                                                   Padding="12,8" 
                                                                   Margin="0,0,8,6"
                                                                   Cursor="Hand">
                                                                <RadioButton Content="{Binding}"
                                                                             GroupName="PrimaryMood"
                                                                             Command="{Binding DataContext.SetPrimaryMoodCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                             CommandParameter="{Binding}"
                                                                             Background="Transparent"
                                                                             BorderThickness="0"
                                                                             Padding="0"
                                                                             Margin="0">
                                                                    <RadioButton.IsChecked>
                                                                        <MultiBinding Mode="OneWay" Converter="{StaticResource MoodEqualsConverter}">
                                                                            <Binding Path="DataContext.SelectedPrimaryMood" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                                            <Binding/>
                                                                        </MultiBinding>
                                                                    </RadioButton.IsChecked>
                                                                    <RadioButton.Style>
                                                                        <Style TargetType="RadioButton">
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="RadioButton">
                                                                                        <StackPanel Orientation="Horizontal">
                                                                                            <Ellipse x:Name="Ellipse" 
                                                                                                    Width="16" 
                                                                                                    Height="16" 
                                                                                                    Stroke="#FF2196F3" 
                                                                                                    StrokeThickness="2" 
                                                                                                    Fill="Transparent" 
                                                                                                    Margin="0,0,8,0"/>
                                                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                                                        </StackPanel>
                                                                                        <ControlTemplate.Triggers>
                                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                                <Setter TargetName="Ellipse" Property="Fill" Value="#FF2196F3"/>
                                                                                            </Trigger>
                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </RadioButton.Style>
                                                                </RadioButton>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>

                                        <!-- Secondary Mood Section -->
                                        <Border Background="#FFFFF5F5" CornerRadius="10" Padding="15">
                                            <StackPanel>
                                                <TextBlock Text="Secondary Moods (Optional - up to 2)" 
                                                          FontWeight="Bold" 
                                                          FontSize="14" 
                                                          Foreground="#FFE91E63"
                                                          Margin="0,0,0,12"/>

                                                <TextBlock Text="Positive" FontWeight="SemiBold" FontSize="13" Foreground="#FF666666" Margin="0,0,0,6"/>
                                                <ItemsControl ItemsSource="{Binding Source={x:Static local:JournalView.PositiveMoods}}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="White" 
                                                                   BorderBrush="#FFE0E0E0" 
                                                                   BorderThickness="1" 
                                                                   CornerRadius="8" 
                                                                   Padding="12,8" 
                                                                   Margin="0,0,8,6"
                                                                   Cursor="Hand">
                                                                <CheckBox Content="{Binding}"
                                                                          Command="{Binding DataContext.ToggleSecondaryMoodCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                          CommandParameter="{Binding}"
                                                                          Background="Transparent"
                                                                          BorderThickness="0"
                                                                          Padding="0"
                                                                          Margin="0">
                                                                    <CheckBox.IsChecked>
                                                                        <MultiBinding Mode="OneWay" Converter="{StaticResource CollectionContainsConverter}">
                                                                            <Binding Path="DataContext.SelectedSecondaryMoods" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                                            <Binding/>
                                                                        </MultiBinding>
                                                                    </CheckBox.IsChecked>
                                                                    <CheckBox.Style>
                                                                        <Style TargetType="CheckBox">
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="CheckBox">
                                                                                        <StackPanel Orientation="Horizontal">
                                                                                            <Border x:Name="CheckBoxBorder" 
                                                                                                   Width="16" 
                                                                                                   Height="16" 
                                                                                                   BorderBrush="#FFE91E63" 
                                                                                                   BorderThickness="2" 
                                                                                                   Background="Transparent" 
                                                                                                   CornerRadius="3"
                                                                                                   Margin="0,0,8,0"/>
                                                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                                                        </StackPanel>
                                                                                        <ControlTemplate.Triggers>
                                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#FFE91E63"/>
                                                                                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#FFE91E63"/>
                                                                                            </Trigger>
                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </CheckBox.Style>
                                                                </CheckBox>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <TextBlock Text="Neutral" FontWeight="SemiBold" FontSize="13" Foreground="#FF666666" Margin="0,10,0,6"/>
                                                <ItemsControl ItemsSource="{Binding Source={x:Static local:JournalView.NeutralMoods}}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="White" 
                                                                   BorderBrush="#FFE0E0E0" 
                                                                   BorderThickness="1" 
                                                                   CornerRadius="8" 
                                                                   Padding="12,8" 
                                                                   Margin="0,0,8,6"
                                                                   Cursor="Hand">
                                                                <CheckBox Content="{Binding}"
                                                                          Command="{Binding DataContext.ToggleSecondaryMoodCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                          CommandParameter="{Binding}"
                                                                          Background="Transparent"
                                                                          BorderThickness="0"
                                                                          Padding="0"
                                                                          Margin="0">
                                                                    <CheckBox.IsChecked>
                                                                        <MultiBinding Mode="OneWay" Converter="{StaticResource CollectionContainsConverter}">
                                                                            <Binding Path="DataContext.SelectedSecondaryMoods" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                                            <Binding/>
                                                                        </MultiBinding>
                                                                    </CheckBox.IsChecked>
                                                                    <CheckBox.Style>
                                                                        <Style TargetType="CheckBox">
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="CheckBox">
                                                                                        <StackPanel Orientation="Horizontal">
                                                                                            <Border x:Name="CheckBoxBorder" 
                                                                                                   Width="16" 
                                                                                                   Height="16" 
                                                                                                   BorderBrush="#FFE91E63" 
                                                                                                   BorderThickness="2" 
                                                                                                   Background="Transparent" 
                                                                                                   CornerRadius="3"
                                                                                                   Margin="0,0,8,0"/>
                                                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                                                        </StackPanel>
                                                                                        <ControlTemplate.Triggers>
                                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#FFE91E63"/>
                                                                                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#FFE91E63"/>
                                                                                            </Trigger>
                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </CheckBox.Style>
                                                                </CheckBox>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <TextBlock Text="Negative" FontWeight="SemiBold" FontSize="13" Foreground="#FF666666" Margin="0,10,0,6"/>
                                                <ItemsControl ItemsSource="{Binding Source={x:Static local:JournalView.NegativeMoods}}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="White" 
                                                                   BorderBrush="#FFE0E0E0" 
                                                                   BorderThickness="1" 
                                                                   CornerRadius="8" 
                                                                   Padding="12,8" 
                                                                   Margin="0,0,8,6"
                                                                   Cursor="Hand">
                                                                <CheckBox Content="{Binding}"
                                                                          Command="{Binding DataContext.ToggleSecondaryMoodCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                          CommandParameter="{Binding}"
                                                                          Background="Transparent"
                                                                          BorderThickness="0"
                                                                          Padding="0"
                                                                          Margin="0">
                                                                    <CheckBox.IsChecked>
                                                                        <MultiBinding Mode="OneWay" Converter="{StaticResource CollectionContainsConverter}">
                                                                            <Binding Path="DataContext.SelectedSecondaryMoods" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                                            <Binding/>
                                                                        </MultiBinding>
                                                                    </CheckBox.IsChecked>
                                                                    <CheckBox.Style>
                                                                        <Style TargetType="CheckBox">
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="CheckBox">
                                                                                        <StackPanel Orientation="Horizontal">
                                                                                            <Border x:Name="CheckBoxBorder" 
                                                                                                   Width="16" 
                                                                                                   Height="16" 
                                                                                                   BorderBrush="#FFE91E63" 
                                                                                                   BorderThickness="2" 
                                                                                                   Background="Transparent" 
                                                                                                   CornerRadius="3"
                                                                                                   Margin="0,0,8,0"/>
                                                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                                                        </StackPanel>
                                                                                        <ControlTemplate.Triggers>
                                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#FFE91E63"/>
                                                                                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#FFE91E63"/>
                                                                                            </Trigger>
                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </CheckBox.Style>
                                                                </CheckBox>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Expander.Content>
                        </Expander>
                    </Border>

                    <!-- Category -->
                    <Border Background="{DynamicResource CardBackgroundBrush}" 
                           CornerRadius="10" 
                           Padding="18" 
                           Margin="0,0,0,15"
                           BorderBrush="{DynamicResource BorderBrush}"
                           BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‚ Category (Optional)" 
                                      FontSize="16" 
                                      FontWeight="Bold" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      Margin="0,0,0,10"/>
                            <ComboBox ItemsSource="{Binding Categories}"
                                     SelectedItem="{Binding SelectedCategory}"
                                     Margin="0,0,0,5"
                                     Padding="8"
                                     BorderBrush="{DynamicResource InputBorderBrush}"/>
                            <TextBlock Text="Tip: choose one main category, and use Tags for more details."
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Tags -->
                    <Border Background="{DynamicResource CardBackgroundBrush}" 
                           CornerRadius="10" 
                           Padding="18" 
                           Margin="0,0,0,15"
                           BorderBrush="{DynamicResource BorderBrush}"
                           BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ðŸ·ï¸ Tags" 
                                      FontSize="16" 
                                      FontWeight="Bold" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBox Text="{Binding NewTag}" 
                                        Width="150" 
                                        Margin="0,0,5,0"
                                        Padding="8"
                                        BorderBrush="{DynamicResource InputBorderBrush}"/>
                                <Button Content="âž• Add" 
                                       Command="{Binding AddTagCommand}" 
                                       Background="#F59E0B" 
                                       Foreground="White"
                                       Padding="16,10"
                                       FontWeight="SemiBold"
                                       MinWidth="80">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                               CornerRadius="6" 
                                                               Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#D97706"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>

                            <TextBlock Text="Quick Tags (Pre-built):" 
                                      FontWeight="Bold" 
                                      FontSize="12" 
                                      Foreground="{DynamicResource SecondaryTextBrush}"
                                      Margin="0,0,0,6"/>
                            <ItemsControl ItemsSource="{Binding PrebuiltTags}" Margin="0,0,0,10">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}"
                                                Command="{Binding DataContext.AddPrebuiltTagCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="{DynamicResource TagSecondaryBackgroundBrush}"
                                                Foreground="{DynamicResource TagSecondaryTextBrush}"
                                                Padding="12,8"
                                                Margin="0,0,8,8"
                                                FontSize="12"
                                                FontWeight="Medium"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                       CornerRadius="6" 
                                                                       Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.8"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <ItemsControl ItemsSource="{Binding Tags}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource TagBackgroundBrush}" 
                                               CornerRadius="12" 
                                               Padding="8,4" 
                                               Margin="0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" 
                                                          Text="{Binding}" 
                                                          FontSize="12" 
                                                          Foreground="{DynamicResource TagTextBrush}"
                                                          VerticalAlignment="Center"/>
                                                <Button Grid.Column="1" 
                                                       Content="Ã—" 
                                                       Command="{Binding DataContext.RemoveTagCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                       CommandParameter="{Binding}"
                                                       Padding="5,0"
                                                       FontSize="14"
                                                       Background="Transparent"
                                                       Foreground="#F44336"
                                                       BorderThickness="0"
                                                       Cursor="Hand"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Search -->
                    <Border Background="{DynamicResource CardBackgroundBrush}" 
                           CornerRadius="10" 
                           Padding="18" 
                           Margin="0,0,0,15"
                           BorderBrush="{DynamicResource BorderBrush}"
                           BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ðŸ” Search Entries" 
                                      FontSize="16" 
                                      FontWeight="Bold" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      Margin="0,0,0,10"/>
                            <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" 
                                    Padding="10"
                                    BorderBrush="{DynamicResource InputBorderBrush}"
                                    FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <!-- Entry List -->
                    <Border Background="{DynamicResource CardBackgroundBrush}" 
                           CornerRadius="8" 
                           Padding="15"
                           BorderBrush="{DynamicResource BorderBrush}"
                           BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ðŸ“š Previous Entries" 
                                      FontSize="16" 
                                      FontWeight="Bold" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      Margin="0,0,0,10"/>
                            <ListBox ItemsSource="{Binding FilteredEntries}" 
                                    BorderThickness="0"
                                    SelectionChanged="EntryListBox_SelectionChanged"
                                    MaxHeight="300">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource InputBackgroundBrush}" 
                                               CornerRadius="5" 
                                               Padding="12" 
                                               Margin="0,0,0,8"
                                               BorderBrush="{DynamicResource BorderBrush}"
                                               BorderThickness="1">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Date, StringFormat='{}{0:yyyy-MM-dd}'}" 
                                                          FontWeight="Bold" 
                                                          FontSize="14" 
                                                          Foreground="{DynamicResource PrimaryAccentBrush}"
                                                          Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding Content}" 
                                                          TextTrimming="CharacterEllipsis" 
                                                          MaxHeight="60"
                                                          FontSize="12"
                                                          Foreground="{DynamicResource SecondaryTextBrush}"
                                                          TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
