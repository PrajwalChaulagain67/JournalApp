<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#333333"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#666666"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#999999"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#E0E0E0"/>
    
    <!-- Accent Colors - Modern & Vibrant -->
    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="PrimaryAccentHoverBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
    <SolidColorBrush x:Key="SuccessHoverBrush" Color="#059669"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#DC2626"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="WarningHoverBrush" Color="#D97706"/>
    
    <!-- Navigation Bar -->
    <SolidColorBrush x:Key="NavBarBackgroundBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="NavBarTextBrush" Color="#FFFFFF"/>
    
    <!-- Input Colors -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#BDBDBD"/>
    
    <!-- Tag Colors - Modern -->
    <SolidColorBrush x:Key="TagBackgroundBrush" Color="#DBEAFE"/>
    <SolidColorBrush x:Key="TagTextBrush" Color="#1E40AF"/>
    <SolidColorBrush x:Key="TagSecondaryBackgroundBrush" Color="#FEF3C7"/>
    <SolidColorBrush x:Key="TagSecondaryTextBrush" Color="#92400E"/>
    
    <!-- Progress Bar -->
    <SolidColorBrush x:Key="ProgressBackgroundBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="ProgressForegroundBrush" Color="#2196F3"/>
    
</ResourceDictionary>
